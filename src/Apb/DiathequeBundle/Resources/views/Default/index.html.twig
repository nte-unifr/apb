  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  {% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('bundles/apbtypika/css/bootstrap.min.css') }}" type="text/css" media="all" />
  <link href="{{ asset('bundles/apbtypika/css/unifr.101.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('bundles/apbdiatheque/css/style.css') }}" rel="stylesheet" type="text/css" />
  {% endblock %}

  <style>
  .main {
    background-image: url("http://unifr.ch/images/background_main.gif");
    background-repeat: repeat-y;
  }

  @media (max-width: 767px) {
    .main {background-image: none;}
  }

  .navbar-inner {
    background-color: #006699;
    background-image: none;
    background-repeat: repeat-x;
    border: 0px solid #D4D4D4;
    border-radius: 0;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.067);
    min-height: 0px;
    padding-left: 20px;
    padding-right: 20px;
    color: #FFFFFF;
    filter: none;
  }
  .navbar a {
    color: #FFFFFF;
  }

  .navbar .nav > li > a, .navbar .nav > li > a:hover {
    color: #FFFFFF;
    text-shadow: 0 0px 0 #FFFFFF;
    border: 0 1px 0 1px solid #FFFFFF;
    padding: 5px;
    text-transform: uppercase;
  }

  .navbar .nav > li > a:hover {
    color: #006699;
  }

  .navbar .brand {
    color: #FFFFFF;
    display: block;
    float: left;
    font-size: 20px;
    font-weight: 200;
    margin-left: -10px;
    padding: 5px 10px;
    text-shadow: 0 0px 0 #FFFFFF;
    text-decoration: none;
    width: 170px;
  }

  nav a, nav span { margin: 5px;}

  body > .container {
    border-color: #FFFFFF #CCCCCC #CCCCCC;
    border-style: solid;
    border-width: 1px;
  }

  .box001 {
    margin-left: -10px;
  }

  .annexes {
    float: left;
    width: 30%;
  }

  .clear {
    clear: both;
  }
  a.btn {
    text-decoration: none;
  }
  </style>
  {% block javascripts %}
  <script type="text/javascript" src="{{ asset('bundles/apbtypika/js/jquery-1.8.3.min.js') }}"></script>
